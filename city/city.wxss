

.citypicker{
  position: fixed;
  top: 0;
  z-index: 100;
  height: 100%;
  width: 100%;
  min-height: 100%;
  background-color: rgba(0,0,0,0.6);
}

.citypicker .citybody {
  position: absolute;
  bottom: 0px;
  z-index:10;
  background:#fff;
}

.citypicker .cityheader {
  position: fixed;
  overflow: hidden;
  bottom: 240px;
  width: 100%;
  z-index: 14;
  background:#fff;
}

.citypicker .city-cancel {
  float: left;
  margin: 10rpx 20rpx;
  color: #818181;
}

.citypicker .city-true {
  float: right;
  margin: 10rpx 20rpx;
  color: #2FB42E
}

.citypicker .section .picker {
  background-color: #fff;
  border-bottom: 1px #d9d9d9 solid;
  border-top: 1px #d9d9d9 solid;
  padding: 20rpx;
}